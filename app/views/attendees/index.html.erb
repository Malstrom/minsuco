<div class="row">
  <div class="col-md-12 hidden-xs hidden-sm hidden-md">
    <%= render partial: "races/partials/races/filter_desktop",
               :locals => { :path_to_go => user_attendees_path(current_user) } %>
  </div>
  <div class="hidden-lg col-xs-12">
    <button type="button" data-toggle="modal" data-target="#filterModal"
            class="btn btn-primary btn-xl btn-pill-left pull-right">Filtra e ordina</button>
    <%= content_for :body_area do %>
      <%= render partial: "races/partials/races/filter_mobile_modal",
                 :locals => { :path_to_go => user_attendees_path(current_user)} %>
    <% end %>
  </div>
</div>
<br class="hidden-lg">
<div class="row">
  <!--ALl Races-->
  <% if @attendees.empty? %>
    <div class="text-center">
      <p class="lead">Non hai ancora partecipato a nessuna gara!</p>
    </div>
  <% else %>
    <%= render partial: "attendees/partials/races" %>
  <% end %>
</div>