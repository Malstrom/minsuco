<div class="block-center mt-xl wd-xl">
  <!-- START panel-->
  <div class="panel panel-dark panel-flat">
    <div class="panel-heading text-center">
      <a href="#">
        <img src="<%= image_path('angle/logo.png') %>" alt="Image" class="block-center img-rounded" />
      </a>
    </div>
    <div class="panel-body">
      <p class="text-center pv">Registrati qui</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'mb-lg'}) do |f| %>
        <div class="form-group has-feedback">
          <%= f.label :email, class: 'text-muted' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          <span class="fa fa-envelope form-control-feedback text-muted"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.label :password, class: 'text-muted' %>
          <% if @minimum_password_length %>
            <em>(minimo <%= @minimum_password_length %> caratteri)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <span class="fa fa-lock form-control-feedback text-muted"></span>
        </div>
        <div class="clearfix">
          <div class="checkbox c-checkbox pull-left mt0">
            <label>
              <input type="checkbox" value="" required="required" name="agreed" />
              <span class="fa fa-check"></span>I agree with the <a href="#">terms</a>
            </label>
          </div>
        </div>
        <%= f.submit "Sign up", class: 'btn btn-block btn-primary mt-lg' %>
      <% end %>

      <p class="pt-lg text-center">Hai gia un account?</p><a href="<%= new_user_session_path %>" class="btn btn-block btn-default">
      Fai login
    </a>
    </div>
  </div>
  <!-- END panel-->
</div>