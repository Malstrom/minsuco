<div class="block-center mt-xl wd-xl">
  <!-- START panel-->
  <div class="panel panel-dark panel-flat">
    <div class="panel-heading text-center">
      <a href="#">
        <img src="<%= image_path('angle/logo.png') %>" alt="Image" class="block-center img-rounded" />
      </a>
    </div>
    <div class="panel-body">
      <p class="text-center pv">ENTRA NELLA PIATTAFORMA CON I SOCIAL</p>

      <div class="text-center pv row">
        <%- if devise_mapping.omniauthable? %>

          <%- resource_class.omniauth_providers.reverse.each do |provider| %>
            <div class="col-md-12" style="padding-bottom: 10px">
            <% if OmniAuth::Utils.camelize(provider) == 'Facebook' %>
              <%= link_to(omniauth_authorize_path(resource_name, provider), class: "btn btn-labeled btn-info btn-facebook") do  %>
                <span class="btn-label"><i class="fa fa-facebook"></i></span>
                <%= "Registrati con Facebook"  %>
              <% end %>
            <% elsif OmniAuth::Utils.camelize(provider) == 'GoogleOauth2' %>
              <%= link_to(omniauth_authorize_path(resource_name, provider), class: "btn btn-labeled btn-danger btn-lg") do  %>
                <span class="btn-label"><i class="fa fa-google"></i></span>
                <%= "Registrati con Google"  %>
              <% end %>
            <% end %>
            </div>
          <% end -%>

        <% end -%>
      </div>

      <p class="text-center">oppure</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:'mb-lg'}) do |f| %>

        <div class="form-group has-feedback">
          <%= f.email_field :email, autofocus: true, class:'form-control', placeholder: 'inserisci email', required:true  %>
          <span class="fa fa-envelope form-control-feedback text-muted"></span>
        </div>

        <div class="form-group has-feedback">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', required:true %>
          <span class="fa fa-lock form-control-feedback text-muted"></span>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="clearfix">
            <div class="checkbox c-checkbox pull-left mt0">
              <label>
                <%= f.check_box :remember_me %>
                <span class="fa fa-check"></span>Remember Me</label>
            </div>
            <div class="pull-right"><a href="/pages/recover" class="text-muted">Forgot your password?</a>
            </div>
          </div>
        <% end -%>
        <!--<% unless current_user %>-->
          <!--<%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>-->
          <!--<%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %>-->
        <!--<% else %>-->
          <!--<%= link_to "Logout", destroy_user_session_path, method: :delete %>-->
        <!--<% end %>-->

          <!--<%= f.submit "Log in", class:"btn btn-block btn-primary mt-lg" %>-->
      <!--<% end %>-->



      <p class="pt-lg text-center">Need to Signup?</p>
      <%= render "devise/shared/links" %>
      <!--<a href="/pages/register" class="btn btn-block btn-default">Register Now</a>-->
    </div>
  </div>
  <!-- END panel-->
</div>