
<% @events.each do |event| %>

    <% if event.message == "join_in_race" %>
      <%= link_to readed_path(event.id), class:'list-group-item', id: "readed_join_in_race" do %>
        <div class="media-box">
          <div class="pull-left">
            <em class="icon-user-follow fa-2x text-success"></em>
          </div>
          <div class="media-box-body clearfix">
            <p class="m0"></p>
            <p class="m0 text-muted">
              <small>
                <%= I18n.t("messages.join_in_race", who_did:event.who_did.name, race_name: event.thing) %>
              </small>
            </p>
          </div>
        </div>
      <% end %>
    <% elsif event.message == "leave_from_race" %>
      <%= link_to readed_path(event.id), class:'list-group-item', id: "readed_leave_from_race" do %>
        <div class="media-box">
          <div class="pull-left">
            <em class="icon-user-unfollow fa-2x text-danger"></em>
          </div>
          <div class="media-box-body clearfix">
            <p class="m0"></p>
            <p class="m0 text-muted">
              <small>
                <%= I18n.t("messages.leave_from_race", who_did:event.who_did.name, race_name: event.thing) %>
              </small>
            </p>
          </div>
        </div>
      <% end %>
    <% elsif event.message == "change_status" %>
      <%= link_to readed_path(event.id), class:'list-group-item', id: "change_status" do %>
        <div class="media-box">
          <div class="pull-left">
            <em class="icon-refresh fa-2x text-info"></em>
          </div>
          <div class="media-box-body clearfix">
            <p class="m0"></p>
            <p class="m0 text-muted">
              <small>
                <%= I18n.t("messages.leave_from_race", who_did:event.who_did.name, race_name: event.thing) %>
              </small>
            </p>
          </div>
        </div>
      <% end %>
    <% elsif event.message == "change_join_value" %>
      <%= link_to readed_path(event.id), class:'list-group-item', id: "readed_change_join_vale" do %>
        <div class="media-box">
          <div class="pull-left">
            <em class="icon-refresh fa-2x text-info"></em>
          </div>
          <div class="media-box-body clearfix">
            <p class="m0"></p>
            <p class="m0 text-muted">
              <small>
                <%= I18n.t("messages.change_join_value", who_did:event.who_did.name, race_name: event.thing) %>
              </small>
            </p>
          </div>
        </div>
    <% end %>
  <% end %>
<% end %>

