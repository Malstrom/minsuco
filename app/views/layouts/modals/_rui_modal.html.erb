<% content_for :body_area do %>

  <!-- Modal-->
  <div id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" data-dismiss="modal" aria-label="Close" class="close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 id="myModalLabel" class="modal-title">Abbiamo bisogno del tuo RUI per pubblicare la GARA</h4>
        </div>
        <div class="modal-body form-horizontal">
          <%= form_for current_user, id: 'rui-form', :html => {:class => 'form-horizontal'} do |f| %>
            <div class="form-group">
              <%= f.label :name, class: 'col-sm-2 control-label', required:true %>
              <div class="col-sm-6">
                <%= f.text_field :name, class:'form-control'  %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :rui, class: 'col-sm-2 control-label', required:true %>
              <div class="col-sm-6">
                <%= f.text_field :rui, class:'form-control'  %>
              </div>
            </div>
          <% end %>

        </div>
        <div class="modal-footer">
          <button id="save" type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>


  <script>
    $('#myModal').modal('show').css("display", "block").addClass( "in" );

    $('#save').click(function(){

      data = $('form').serialize();
      console.log( data );

      $.ajax({
        url: "/users/<%= current_user.id %>",
        method: 'patch',
        data: data,
        success: $('#myModal').modal('hide')
      });

    });
  </script>
<% end %>