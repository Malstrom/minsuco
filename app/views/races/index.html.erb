<div class="pull-right">
  <button type="button" class="btn btn-info">Crea una gara</button>
</div>
<h3>Le gare sul portale</h3>
<div class="row">

  <% @races.each do |race| %>

    <div class="col-lg-4 col-md-6" style="">
      <div class="panel b">
        <div class="panel-heading">
          <div class="pull-right">
            <div class="label label-success">Adv</div>
            <div class="label label-info">Pubblica</div>
            <div class="label label-warning">Privata</div>
          </div>
          <h4 class="m0"><%= race.name %></h4>
          <small class="text-muted"><%= race.description.truncate_words(10) %></small>
        </div>
        <div class="panel-body">
          <div class="table-grid table-grid-align-middle">
            <div class="col">
              <div class="visible-xs visible-sm text-bold text-muted text-right">22%</div>
              <div data-toggle="tooltip" data-title="Completamento">
                <div class="progress progress-xs m0">
                  <div style="width:22%" class="progress-bar progress-bar-warning">22%</div>
                </div>
              </div>
            </div>
            <div class="col wd-xxs text-right hidden-xs hidden-sm">
              <div class="text-bold text-muted">22%</div>
            </div>
          </div>
        </div>
        <table class="table">
          <tbody>
          <tr>
            <td>
              <strong>Data di inizio</strong>
            </td>
            <td>01/01/2016</td>
          </tr>
          <tr>
            <td>
              <strong>Data conclusione della gara</strong>
            </td>
            <td>01/01/2016</td>
          </tr>
          <tr>
            <td>
              <strong>Partecipanti</strong>
            </td>
            <td>
              <a href="#" class="inline">
                <strong><%= race.attendees.count %></strong>
              </a>
            </td>
          </tr>
          <tr>
            <td>
              <strong>Metrics</strong>
            </td>
            <td>
              <div data-sparkline="" values="20,80" data-type="pie" data-height="24" data-slice-colors='["#edf1f2", "#23b7e5"]' class="sparkline inline mr"></div>
              <div data-sparkline="" values="60,40" data-type="pie" data-height="24" data-slice-colors='["#edf1f2", "#27c24c"]' class="sparkline inline mr"></div>
              <div data-sparkline="" values="90,10" data-type="pie" data-height="24" data-slice-colors='["#edf1f2", "#ff902b"]' class="sparkline inline"></div>
            </td>
          </tr>
          </tbody>
        </table>
        <div class="panel-footer text-center">
          <button type="button" class="btn btn-success">Partecipa</button>
        </div>
      </div>
    </div>
  <% end %>
</div>
