<div class="panel panel-default">

  <div class="panel-heading">
    <button type="button" data-toggle="modal" data-target="#friends_modal" class="btn btn-primary btn-lg">Invita amici</button>
    <div class="pull-right label label-success"><%= Attendee.where(race:@race, status: :confirmed).count %></div>
    <div class="pull-right label label-danger"><%= Attendee.where(race:@race, status: :deny).count %></div>
    Partecipanti
  </div>
  <!-- START table-responsive-->
  <div class="table-responsive">
    <table id="attendee-table" class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Partecipate</th>
        <th>Stato</th>
      </tr>
      </thead>
      <tbody>
      <% @race.attendees.each do |attendee| %>
        <tr>
          <td>
            <div class="media">
              <a href="#" class="pull-left">
                <img src="<%= attendee.user.image %>" alt="" class="media-object img-responsive img-circle">
              </a>
              <div class="media-body">
                <div class="pull-right badge bg-info">
                  <%= number_to_currency attendee.join_value, unit:"€" %></div>
                <h4 class="media-heading"><%= attendee.user.name %></h4>
                <p>
                  <%= attendee.user.kind %> /
                  Telefono: <%= attendee.user.phone %> /
                  Località: <%= attendee.user.location %>
                </p>
              </div>
            </div>
          </td>
          <td class="text-center">
            <%= form_for([@race, attendee], method: :put) do |f| %>
              <% if attendee.status == 'confirmed' %>
                <%= f.hidden_field :status, value: :deny %>
                <button id="confirm_toggle" type="submit" class="btn btn-sm btn-danger pull-right">
                  <em class="fa fa-close"></em>
                </button>
              <% else %>
                <%= f.hidden_field :status, value: :confirmed %>
                <button id="confirm_toggle" type="submit" class="btn btn-sm btn-success pull-right">
                  <em class="fa fa-check"></em>
                </button>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
