<div class="panel b text-center">
  <div class="panel-body">
    <div class="row">
      <% if current_user.joined?(@race) %>
        <div class="col-sm-12">
        <p class="lead">
          Valore della partecipazion
          <br>
          <%= number_to_currency current_user.participation(@race).join_value, unit: "€" %>
        </p>
      </div>
        <div class="col-sm-12">
        <p class="lead">Provvigione
          <br>
          <%= number_to_currency(current_user.participation(@race).commission, unit: "€") %>
        </p>
      </div>
        <div class="col-sm-12">
        <%= form_for([@race, current_user.participation(@race)], method: :delete, :html => {:style => 'display:inline;'}) do |f| %>
          <button id="<%= @race.name %>" type="submit" class="btn btn-info btn-pill-left btn-warning">
            <em class="fa fa-minus fa-fw text-muted text-white"></em>
            <span>Lascia gara</span>
          </button>
        <% end %>
          <button id="<%= @race.name %>" type="button" data-toggle="modal" data-target="#joinEditModal" class="btn btn-info btn-pill-right" >
            <!--<em class="fa fa-plus fa-fw text-muted text-white"></em>-->
            <span>Modifica partecipazione</span>
          </button>
      </div>

    <% else %>
      <button id="<%= @race.name %>" type="button" data-toggle="modal" data-target="#joinModal" class="btn btn-success btn-lg" >
        <em class="fa fa-plus fa-fw text-muted text-white"></em>
        <span>Partecipa</span>
      </button>
    <% end %>

      <br>
      <br>
      <div id="like_widget">
       <% if @race.already_liked_by_user(current_user) %>
          <%= likes_counter_widget(@race.likes.count) %>
        <% else %>
          <%= likes_button_widget(@race.id, current_user.id, @race.likes.count) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
