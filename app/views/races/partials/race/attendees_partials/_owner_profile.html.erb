<div class="panel b text-center">
  <div class="panel-body">
      <%= form_for([@race, current_user.participation(@race)], method: :delete, :html => {:style => 'display:inline;'}) do |f| %>
        <button id="<%= @race.permalink %>" type="submit" class="btn btn-info btn-pill-left btn-warning">
          <em class="fa fa-minus fa-fw text-muted text-white"></em>
          <span>Lascia gara</span>
        </button>
      <% end %>
      <button id="open_join_modal" type="button" data-toggle="modal" data-target="#joinModal" class="btn btn-info btn-pill-right" >
        <!--<em class="fa fa-plus fa-fw text-muted text-white"></em>-->
        <span>Modifica partecipazione</span>
      </button>
  </div>
  <div class="panel-body">
    <p class="h4 text-bold mb0">Creatore</p>
  </div>
  <div class="panel-body">
    <img src="<%= @race.owner.image %>" class="img-circle thumb64">
    <p class="h4 text-bold mb0"><%= @race.owner.name %></p>
    <p><%= @race.owner.email %></p>
    <p><%= @race.owner.phone %></p>
    <p><%= @race.owner.city %></p>
  </div>
</div>