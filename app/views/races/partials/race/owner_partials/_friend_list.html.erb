<div class="container-fluid">
  <!-- START DATATABLE 1 -->
  <div class="row">
    <div class="col-lg-12 p0 m0">
      <%= form_tag invites_user_friends_path(current_user), method: :post do %>
        <%= hidden_field_tag :race_id, @race.id %>
        <div class="panel-body m0 p0">
          <table id="<%= datatable %>" class="table table-striped table-hover">
            <thead>
            <tr>
              <th>Amico (email)</th>
              <th>
                <div style="display: inline" data-toggle="tooltip" data-title="Check All" class="checkbox c-checkbox" data-original-title="" title="">
                  <label>
                    <input type="checkbox">
                    <span class="fa fa-check"></span>
                  </label>
                </div>
              </th>
            </tr>
            </thead>
            <tbody>
              <% friends.each do |friend| %>
                <tr class="gradeX">
                  <td><%= truncate friend.name, length: 50, omission: '' %><br>
                    <small>(<%= truncate friend.email, length: 50, omission: '' %>)</small>
                  </td>
                  <td>
                    <div style="display: inline" class="checkbox c-checkbox m3 p3">
                      <label class="">
                        <%= check_box_tag "emails[#{friend.id}]", friend.email, false, id:"#{friend.email}_check" %>
                        <span id="<%= friend.id %>" class="fa fa-check"></span>
                      </label>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="modal-footer">
          <button id="save" type="submit" class="btn btn-primary btn-lg">Invita amici</button>
        </div>
      </div>
    <% end %>
  </div>
</div>