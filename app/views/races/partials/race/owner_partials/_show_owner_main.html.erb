<!-- Main panel-->
<div class="panel b">
  <div class="panel-heading">
    <div class="pull-right mt">
      <% if @race.started? %>
        <div class="label label-info">Attiva</div>
      <% else %>
        <div class="label label-warning">Spenta</div>
      <% end %>

      <% if @race.pay_for_publish? %>
        <div class="label label-info">Pubblica</div>
      <% else %>
        <div class="label label-warning">Privata</div>
      <% end %>
    </div>
    <h4 class="mv">
      <span><%= @race.name %></span>
    </h4>
  </div>
  <div class="panel-body bb bt">

    <div class="panel widget">
      <div class="row row-table row-flush">
        <div class="col-xs-6 bb br">
          <div class="row row-table row-flush">
            <div class="col-xs-4 text-center text-info">
              <em class="fa fa-dollar fa-2x"></em>
            </div>
            <div class="col-xs-8">
              <div class="panel-body text-center">
                <h4 class="mt0"><%= number_to_currency @race.value_coverage, unit: '€' %></h4>
                <p class="mb0 text-muted">Valore coperto</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-6 bb">
          <div class="row row-table row-flush">
            <div class="col-xs-4 text-center text-info">
              <em class="fa fa-soccer-ball-o fa-2x"></em>
            </div>
            <div class="col-xs-8">
              <div class="panel-body text-center">
                <h4 class="mt0"><%= number_to_currency @race.race_value, unit: '€' %></h4>
                <p class="mb0 text-muted">Premio</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row row-table row-flush">
        <div class="col-xs-6 br">
          <div class="row row-table row-flush">
            <div class="col-xs-4 text-center text-info">
              <em class="fa fa-users fa-2x"></em>
            </div>
            <div class="col-xs-8">
              <div class="panel-body text-center">
                <h4 class="mt0"><%= @race.attendees.count %> / <%= @race.max_attendees %></h4>
                <p class="mb0 text-muted">Partecipanti</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="row row-table row-flush">
            <div class="col-xs-4 text-center text-info">
              <em class="fa fa-calendar-times-o fa-2x"></em>
            </div>
            <div class="col-xs-8">
              <div class="panel-body text-center">
                <h4 class="mt0"><%= distance_of_time_in_words(Time.now, @race.ends_at)  %></h4>
                <p class="mb0 text-muted">al termine</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="panel-body">
    <h4>Descrizione</h4>
    <p><%= @race.description %></p>
  </div>
</div>
<!-- End Main panel-->