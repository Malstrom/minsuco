

<div id="filterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag path_to_go, method: :get do %>
        <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 id="myModalLabel" class="modal-title">Filtra e ordina</h4>
      </div>
        <div class="modal-body text-center">
          <a href="races" class="btn btn-danger btn-xs">
            Resetta filtro
          </a>
          <br>
          <br>
          <div class="form-group">
            <label class="col-sm-2 control-label">Categoria</label>
            <div class="col-sm-6">
              <%= grouped_collection_select(nil,:category_id, Category.find_by_name('assicurazioni').children,
                                            :children, :name, :id ,:name,
                                            {:include_blank => "Seleziona"},
                                            {:class=>'chosen-select input-md form-control input-lg m-b',
                                             :id => "category",
                                             :onchange => "this.form.submit();"}) -%>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Provvigioni</label>
            <div class="col-sm-6">
              <%= select_tag "commission",
                             raw("<option></option><option value='DESC'>alte</option><option value='ASC'>basse</option>"),
                             :onchange => "this.form.submit();"  %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Pubblica / Privata</label>
            <div class="col-sm-6">
              <%= select_tag "kind",
                             raw("<option></option><option value='ASC'>Pubblica</option><option value='DESC'>Privata</option>"),
                             :onchange => "this.form.submit();"  %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Scadenza</label>
            <div class="col-sm-6">
              <%= select_tag "ends_at",
                             raw("<option></option><option value='ASC'>Appena iniziate</option><option value='DESC'>In scadenza</option>"),
                             :onchange => "this.form.submit();"  %>
            </div>
          </div>
      </div>
        <!--<div class="modal-footer">-->
          <!--<button type="button" data-dismiss="modal" class="btn btn-default">Close</button>-->
          <!--<button id="submit" type="button" class="btn btn-primary">Vai</button>-->
        <!--</div>-->
      </div>
        <% end %>
    </div>
  </div>
</div>
