                    <em class="fa fa-pause fa-fw text-muted text-warning"></em>
                    <span>Pause</span>
                  </button>
                <% end %>
              <% end %>


            <% elsif @race.owner != current_user %>
              <% if current_user.joined?(@race) %>
                <%= link_to leave_race_path @race do %>
                  <button type="button" class="btn btn-warning btn-oval btn-outline">
                    <em class="fa fa-minus fa-fw text-muted text-warning"></em>
                    <span>Lascia gara</span>
                  </button>
                <% end %>
              <% else %>
