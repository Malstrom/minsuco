        <div class="clearfix">
          <div class="pull-left">
            <% if @race.owner == current_user %>
              <% if @race.status == 'paused' %>
                <%= link_to start_race_path @race do %>
                  <button type="button" class="btn btn-success btn-oval btn-outline">
                    <em class="fa fa-play fa-fw text-muted text-success"></em>
                    <span>Start</span>
                  </button>
                <% end %>
              <% else %>
