<h3>
  <div class="row">
    <div class="col-md-2">
      Filtra le gare per:
    </div>
    <div class="col-md-10">
      <%= link_to 'Pubbliche', races_path(sort:'kind', verse:'ASC'), class: 'btn btn-info btn-outline btn-lg' %>
      <%= link_to 'Private', races_path(sort:'kind', verse:'DESC'), class: 'btn btn-info btn-outline btn-lg' %>
    </div>
  </div>
</h3>
<div class="row text">

  <!--ALl Races-->
  <% if @races.empty? %>
    <div class="text-center">
      <p class="lead">Non hai ancora creato una gara,</p>
      <p class="lead">cosa aspetti?</p>
      <%= link_to(new_race_path, class:'btn btn-success btn-oval btn-xl', id:'plus_nuova_gara') do %>
        &nbsp
        <em class="fa fa-plus"></em>
        &nbsp
      <% end %>
    </div>
  <% else %>
    <%= render partial: "races/partials/races/all" %>
  <% end %>

</div>